<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="343dp"
        android:layout_height="132dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:text="Question"
        android:textSize="27sp" />

    <RadioGroup
        android:id="@+id/answer_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

    <RadioButton
        android:id="@+id/option_rarely"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沒有或極少 (每週一次以下)"
        android:textSize="25sp"/>

        <RadioButton
            android:id="@+id/option_sometimes"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:text="有時候 (每週1~2天)"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/option_often"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:text="時常 (每週3~4天)"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/option_always"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:text="常常或總是 (每週5~7天)"
            android:textSize="25sp" />
</RadioGroup>

    <ImageButton
        android:id="@+id/Back_button"
        android:layout_width="25dp"
        android:layout_height="33dp"
        android:layout_marginLeft="-160dp"
        android:layout_marginTop="-400dp"
        android:background="@drawable/img_16" />

</LinearLayout>
