<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/img_1">


    <EditText
        android:id="@+id/nickname"
        android:layout_width="339dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="165.59dp"
        android:gravity="center"
        android:hint="暱稱或姓名"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:background="@drawable/image3"/>

    <EditText
        android:id="@+id/birthdate"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="225.59dp"
        android:gravity="center"
        android:hint="出生年月日(ex:0950302)"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:background="@drawable/image3"/>

    <EditText
        android:id="@+id/id_last4"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="285.59dp"
        android:gravity="center"
        android:hint="身分證後四碼"
        android:inputType="number|numberSigned"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:background="@drawable/image3"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="342dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="345.59dp"
        android:gravity="center"
        android:hint="帳號"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:background="@drawable/image3"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="339dp"
        android:layout_height="48dp"
        android:layout_gravity="top|left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="405.59dp"
        android:gravity="center"
        android:hint="密碼"
        android:inputType="textPassword"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="25sp"
        android:background="@drawable/image3"/>

    <Button
        android:id="@+id/register_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65.45dp"
        android:layout_marginTop="565.59dp"
        android:backgroundTint="#A6C4E5"
        android:text="註冊"
        android:textColor="#FFFFFF"
        android:textSize="24sp" />

    <ImageButton
        android:id="@+id/Back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        android:contentDescription="@string/back_button_description"
        android:background="?attr/selectableItemBackground"/>
    <TextView
        android:layout_width="135dp"
        android:layout_height="80dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="780.59dp"
        android:text="Mood Check"
        android:textColor="#A6C4E5"
        android:textSize="20sp" />



</FrameLayout>